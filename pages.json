{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"app-plus":{
					"scrollIndicator":"none",//隐藏滚动条
					"bounce":"none",//反弹效果
					"titleNView":{
						"buttons":[
							//左边
							{
								"color":"#ff9619",
								"colorPressed":"#BBBBBB",
								"float":"left",
								"fontSize":"22px",
								"fontSrc":"/static/font/icon.ttf",
								"text":"\ue609"
							},
							//右边
							{
								"color":"#000000",
								"colorPressed":"#BBBBBB",
								"float":"right",
								"fontSize":"22px",
								"fontSrc":"/static/font/icon.ttf",
								"text":"\ue653"
							}
						],
						//搜索框配置
						"searchInput":{
							"align":"center",
							"autoFocus":false,
							"borderRadius":"4upx",
							"backgroundColor":"#f7f7f7",
							"placeholder":"搜索糗事",
							"placeholderColor":"#ccc",
							"disabled":true
						}
					}
				}
			}
		}, {
			"path": "pages/news/news",
			"style": {
				"app-plus":{
					"titleNView":false//是否用自定义导航栏
				}
			}
		}, {
			"path": "pages/paper/paper",
			"style": {}
		}, {
			"path": "pages/home/home",
			"style": {}
		},
		{
			"path": "pages/demo/demo",
			"style": {
				"navigationBarTitleText": "demo"
			}
		}
        ,{
            "path" : "pages/search/search",
           "style": {
           	"app-plus":{
           		"scrollIndicator":"none",//隐藏滚动条
           		"bounce":"none",//反弹效果
           		"titleNView":{
					"autoBackButton":false,
           			"buttons":[
           				{
           					"color":"#000000",
           					"colorPressed":"#BBBBBB",
           					"float":"right",
           					"fontSize":"16px",
           					"text":"取消"
           				}
           			],
           			//搜索框配置
           			"searchInput":{
           				"align":"left",
           				"autoFocus":false,
           				"borderRadius":"4upx",
           				"backgroundColor":"#f7f7f7",
           				"placeholder":"搜索糗事",
           				"placeholderColor":"#ccc",
           				"disabled":false
           			}
           		}
           	}
           }
        }
        ,{
            "path" : "pages/addInput/addInput",
            "style" : {
				"app-plus":{
					//禁用原生导航
					"titleNView":false
				}
			}
        }
     
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "仿糗事百科",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF"
	},
	"tabBar": {
		"color": "#B5B5B5",
		"selectedColor": "#fee428",
		"borderStyle": "black",
		"backgroundColor": "#FFFFFF",
		"list": [{
				"pagePath": "pages/index/index",
				"text": "糗事",
